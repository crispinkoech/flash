{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "import",
        "@typescript-eslint"
    ],
    "env": {
        "browser": false,
        "node": true,
        "jest": true
    },
    "rules": {
        "indent": [2, 4],
        "import/prefer-default-export": 0,
        "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts"
                ]
            }
        }
    }
}        
                                                                                                        